# AI ML API Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# AI ML API Configuration for VoiceFlow Pro
# =============================================================================

# Required: Your AI ML API key from https://aimlapi.com/
AIML_API_KEY=your-api-key-here

# Optional: Custom API base URL (defaults to https://api.aimlapi.com)
# AIML_BASE_URL=https://api.aimlapi.com

# =============================================================================
# Performance Settings
# =============================================================================

# Request timeout in seconds (default: 30)
AIML_TIMEOUT_SECONDS=30

# Maximum retry attempts for failed requests (default: 3)
AIML_MAX_RETRIES=3

# Retry delay in milliseconds (default: 1000)
AIML_RETRY_DELAY_MS=1000

# Enable fallback mechanisms (default: true)
AIML_ENABLE_FALLBACK=true

# Enable result caching (default: true)
AIML_CACHE_RESULTS=true

# Maximum cache size (default: 1000 entries)
AIML_MAX_CACHE_SIZE=1000

# =============================================================================
# AI Model Configuration
# =============================================================================

# Default model for general operations (default: gpt-4o)
AIML_DEFAULT_MODEL=gpt-4o

# Text enhancement model (recommended: gpt-5-pro for best results)
AIML_TEXT_MODEL=gpt-5-pro

# Voice generation model (recommended: gpt-4o-mini-tts for multilingual)
AIML_VOICE_MODEL=gpt-4o-mini-tts

# Translation model (recommended: claude-3-5-haiku for multilingual)
AIML_TRANSLATION_MODEL=claude-3-5-haiku

# Context processing model (recommended: gpt-5-pro for best understanding)
AIML_CONTEXT_MODEL=gpt-5-pro

# =============================================================================
# Voice Configuration Defaults
# =============================================================================

# Default voice for TTS (options: alloy, echo, fable, onyx, nova, shimmer)
AIML_DEFAULT_VOICE=nova

# Default speaking rate (0.5 to 2.0, default: 1.0)
AIML_DEFAULT_SPEECH_RATE=1.0

# Default pitch adjustment (-50 to +50, default: 0)
AIML_DEFAULT_PITCH=0

# Default volume (0.0 to 1.0, default: 0.8)
AIML_DEFAULT_VOLUME=0.8

# Default output format (mp3, wav, ogg, flac, aac, m4a)
AIML_DEFAULT_AUDIO_FORMAT=mp3

# Default audio bitrate for MP3 (64, 128, 192, 256, 320)
AIML_DEFAULT_BITRATE=128

# =============================================================================
# Language Support
# =============================================================================

# Default source language (ISO 639-1 code)
AIML_DEFAULT_SOURCE_LANG=en

# Default target language (ISO 639-1 code)
AIML_DEFAULT_TARGET_LANG=en

# Supported languages (comma-separated ISO codes)
# Available: en, es, fr, de, it, pt, zh, ja, ko, ar
AIML_SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,zh,ja,ko,ar

# =============================================================================
# Security Settings
# =============================================================================

# Enable request validation (default: true)
AIML_ENABLE_VALIDATION=true

# Enable input sanitization (default: true)
AIML_ENABLE_SANITIZATION=true

# Maximum text length for processing (default: 10000 characters)
AIML_MAX_TEXT_LENGTH=10000

# Maximum voice text length (default: 5000 characters)
AIML_MAX_VOICE_TEXT_LENGTH=5000

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Enable detailed logging (default: false for production)
AIML_ENABLE_DEBUG_LOGGING=false

# Log level (error, warn, info, debug, trace)
AIML_LOG_LEVEL=info

# Enable performance monitoring (default: true)
AIML_ENABLE_MONITORING=true

# Enable health checks (default: true)
AIML_ENABLE_HEALTH_CHECKS=true

# =============================================================================
# Development Settings
# =============================================================================

# Enable mock responses for testing (default: false)
AIML_USE_MOCK_RESPONSES=false

# Enable development mode features (default: false)
AIML_DEVELOPMENT_MODE=false

# Custom model endpoint for testing (optional)
# AIML_CUSTOM_ENDPOINT=https://custom-aiml-endpoint.example.com

# =============================================================================
# Production Settings
# =============================================================================

# Production API key (for production deployments)
# AIML_PRODUCTION_API_KEY=your-production-api-key

# Production base URL (for production deployments)
# AIML_PRODUCTION_BASE_URL=https://api.aimlapi.com

# Enable production optimizations (default: false)
# AIML_PRODUCTION_MODE=false

# =============================================================================
# Instructions
# =============================================================================

# 1. Sign up at https://aimlapi.com/ to get your API key
# 2. Copy this file to .env in your project root
# 3. Replace 'your-api-key-here' with your actual API key
# 4. Adjust settings according to your needs
# 5. Ensure the .env file is not committed to version control
#
# For production:
# - Use environment variables instead of .env file
# - Set AIML_PRODUCTION_MODE=true
# - Enable debug logging only if needed
# - Consider using a dedicated API key for production
#
# For development:
# - You can use the Developer plan (free) for testing
# - Enable debug logging for troubleshooting
# - Use mock responses if you want to test without API calls
