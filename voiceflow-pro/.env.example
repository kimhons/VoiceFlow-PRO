# Environment Variables for VoiceFlow Pro
# Copy this file to .env and fill in your values

# Development settings
VITE_DEV_SERVER_PORT=1420
VITE_API_BASE_URL=http://localhost:3000

# Production settings
VITE_API_BASE_URL=https://api.voiceflow.pro

# Voice settings
VITE_DEFAULT_LANGUAGE=en-US
VITE_DEFAULT_VOICE_MODEL=whisper-base

# Analytics (optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=

# Feature flags
VITE_ENABLE_SYSTEM_TRAY=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_GLOBAL_SHORTCUTS=true

# Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_DEBUG_LOGS=false

# Build settings
VITE_BUILD_TARGET=auto

# Platform-specific settings
# Windows
WINDOWS_APP_ID=com.voiceflow.pro

# macOS
MACOS_BUNDLE_ID=com.voiceflow.pro
MACOS_CATEGORY=public.app-category.productivity

# Linux
LINUX_APP_ID=com.voiceflow.pro
LINUX_CATEGORIES=Office;Utility;