{
  "name": "voiceflow-pro",
  "version": "1.0.0",
  "description": "VoiceFlow Pro - Cross-platform Desktop Voice Assistant",
  "main": "src/index.html",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "build:dev": "tauri build --debug",
    "tauri:build": "tauri build",
    "tauri:dev": "tauri dev",
    "tauri:build:dev": "tauri build --debug",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "type-check": "tsc --noEmit",
    "test": "echo \"Run tests in individual packages\"",
    "setup": "npm install && cd src-tauri && cargo check",
    "dist": "npm run build && npm run tauri:build",
    "ai:examples": "cd src-tauri && cargo run --example ai_ml_api_usage_examples",
    "ai:check": "cd src-tauri && cargo check --features ai-ml-api",
    "ai:test": "cd src-tauri && cargo test --features ai-ml-api",
    "ai:build": "cd src-tauri && cargo build --features ai-ml-api --release"
  },
  "keywords": [
    "voice-assistant",
    "desktop-app",
    "tauri",
    "cross-platform",
    "voiceflow"
  ],
  "author": "VoiceFlow Pro Team",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.6",
    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tauri": "^1.0.0"
  }
}