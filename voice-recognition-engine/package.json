{
  "name": "voiceflow-voice-recognition-engine",
  "version": "1.0.0",
  "description": "Core voice recognition engine for VoiceFlow Pro with Web Speech API and Whisper.js support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "browser": "dist/browser.js",
  "unpkg": "dist/voiceflow-pro.umd.js",
  "scripts": {
    "build": "npm run clean && tsc && node scripts/build.js build",
    "dev": "npm run build && tsc --watch",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\"voice-recognition.test.ts\"",
    "test:integration": "jest --testPathPattern=\"integration.test.ts\" --runInBand",
    "test:performance": "jest --testPathPattern=\"performance.test.ts\" --runInBand --testTimeout=30000",
    "test:ci": "jest --ci --coverage --watchAll=false --reporters=default --reporters=jest-junit",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build",
    "clean": "node scripts/build.js clean",
    "examples": "node scripts/build.js examples",
    "docs": "node scripts/build.js build && typedoc",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "voice-recognition",
    "speech-to-text",
    "whisper",
    "web-speech-api",
    "offline-speech",
    "voice-productivity",
    "voiceflow-pro",
    "real-time-transcription",
    "noise-reduction",
    "150-languages"
  ],
  "author": "VoiceFlow Pro Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/voiceflow-pro/voice-recognition-engine.git"
  },
  "bugs": {
    "url": "https://github.com/voiceflow-pro/voice-recognition-engine/issues"
  },
  "homepage": "https://github.com/voiceflow-pro/voice-recognition-engine#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "@xenova/transformers": "^2.14.0",
    "@ricky0123/vad-web": "^0.0.19"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.2"
  },
  "files": [
    "dist/",
    "src/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/index.d.ts",
      "import": "./dist/browser.js",
      "default": "./dist/browser.js"
    },
    "./umd": {
      "types": "./dist/index.d.ts",
      "import": "./dist/voiceflow-pro.umd.js",
      "default": "./dist/voiceflow-pro.umd.js"
    }
  },

  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "typedoc": {
    "entryPoint": "./src/index.ts",
    "out": "./docs",
    "theme": "default",
    "includeVersion": true,
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "readme": "none"
  }
}